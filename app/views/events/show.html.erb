<div>
    <h1><%= @event.title %></h1>
    <p>Description: <%= @event.description %></p>
    <p>Date: <%= @event.date %></p>
    <p>Time: <%= @event.time %></p>
    <p>Creator:
    <%= link_to controller: "users", action: "show", id: @event.creator.id do %> 
        <%= @event.creator.username %>
    <% end %>
    </p>
</div>